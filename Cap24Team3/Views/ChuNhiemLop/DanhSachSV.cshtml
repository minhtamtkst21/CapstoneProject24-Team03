                                            <th>Số tín chỉ</th>
                                            <th>Học kỳ</th>
                                            <th>Điểm thang 10</th>
                                            <th>Điểm thang 4</th>
                                            <th>Đánh giá</th>
                                            <th>Qua môn</th>
                                        </tr>
                                        @foreach (var item in Session["diemso"] as List<Cap24Team3.Models.DiemHocPhan>)
                                        {
                                            <tr>
                                                <td>@item.HocPhan</td>
                                                <td>@item.TenHocPhan</td>
                                                <td>@item.SoTinChi</td>
                                                <td>@item.HocKy</td>
                                                <td>@item.Diem10</td>
                                                <td>@item.Diem4</td>
