@model IEnumerable<Cap24Team3.Models.SinhVien>

@{
    ViewBag.Title = "DanhSachSV";
    Layout = "~/Views/Shared/Student_layout.cshtml";
}
<section class="pager-section">
    <div class="container">
        <div class="pager-content text-center">
            <h2 style="font-family: 'Montserrat'; font-weight: 600; font-size: 100px; ">Quản lý lớp</h2>
            <ul>
                <li><a href="#" title="">Home</a></li>
                <li><span>Quản lý lớp</span></li>
            </ul>
        </div><!--pager-content end-->
        <h4 class="page-titlee">E-Profile</h4>
    </div>
</section><!--pager-section end-->
<hr>
<div class="page-content">
    <div class="content">
        <!-- Start Content-->
        <div class="container">
            <button type="button" id="button" name="button" value="Thêm sinh viên" class="btn btn-secondary btn-rounded" data-toggle="modal" data-target="#ThemSV">
                <i class="mdi mdi-microsoft-excel"></i> Thêm sinh viên
            </button>
            <hr />
            <div class="col-xl-12">
                <div class="card-box">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0" id="table">
                            <thead>
                                <tr>
                                    <th>MSSV</th>
                                    <th>Họ</th>
                                    <th>Tên</th>
                                    <th>Ngày sinh</th>
                                    <th>Giới tính</th>
                                    <th>Tình trạng</th>
                                    <th>Email</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var s in Model)
                                {

                                    <tr>
                                        <td>@s.MSSV</td>
                                        <td>@s.Ho</td>
                                        <td>@s.Ten</td>
                                        <td>@s.NgaySinh</td>
                                        <td>@s.GioiTinh</td>
                                        <td>@s.TinhTrang.TenTinhTrang</td>
                                        <td>@s.Email_1</td>
                                        <td>
                                            <a href="@Url.Action("XemChiTietSV", new { id = s.ID })">Xem chi tiết</a> |
                                            <a href="@Url.Action("XemDiemSinhVien", new { id = s.ID })"> Xem điểm</a> |
                                            <a href="@Url.Action("XoaSVKhoiLop", new { id = s.ID })"> Xóa</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div> <!-- end .table-responsive-->
                </div> <!-- end card-box -->
            </div> <!-- end col -->
            <div class="modal fade" id="modelId" tabindex="-1" role="dialog" aria-labelledby="modelTitleId" aria-hidden="true">
                @{ var sinhvien = Session["sinhvien"] as Cap24Team3.Models.SinhVien; }
                @if (sinhvien != null)
                {
                    <div class="modal-dialog modal-lg" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <div class="col-1"></div>
                                <div class="col-10 text-center">
                                    <h4 class="modal-title" style="font-family: Roboto;"> Thông tin sinh viên</h4>
                                </div>

                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="card-body">
                                <div class="d-flex flex-column align-items-center text-center">
                                    <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                                    <div class="mt-3">
                                        <h4 style="font-family: 'Montserrat'; color: black; font-weight: 600;">@sinhvien.Ho @sinhvien.Ten</h4>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body text-wrap">
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h5 class="mb-0" style="font-family: 'Montserrat'; color: black; font-weight: 600;">Mã số sinh viên:</h5>
                                    </div>
                                    <div class="col-sm-9 text-secondary" style="font-family: 'Montserrat'; color: black;">
                                        @sinhvien.MSSV
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h5 class="mb-0" style="font-family: 'Montserrat'; color: black; font-weight: 600;">Ngày sinh:</h5>
                                    </div>
                                    <div class="col-sm-9 text-secondary" style="font-family: 'Montserrat'; color: black;">
                                        @sinhvien.NgaySinh
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h5 class="mb-0" style="font-family: 'Montserrat'; color: black; font-weight: 600;">Giới tính:</h5>
                                    </div>
                                    <div class="col-sm-9 text-secondary" style="font-family: 'Montserrat'; color: black;">
                                        @sinhvien.GioiTinh
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h5 class="mb-0" style="font-family: 'Montserrat'; color: black; font-weight: 600;">Tình trạng:</h5>
                                    </div>
                                    <div class="col-sm-9 text-secondary" style="font-family: 'Montserrat'; color: black;">
                                        @Session["tinhtrang"]
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h5 class="mb-0" style="font-family: 'Montserrat'; color: black; font-weight: 600;">Email 1:</h5>
                                    </div>
                                    <div class="col-sm-9 text-secondary" style="font-family: 'Montserrat'; color: black;">
                                        @sinhvien.Email_1
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h5 class="mb-0" style="font-family: 'Montserrat'; color: black; font-weight: 600;">Email 2:</h5>
                                    </div>
                                    <div class="col-sm-9 text-secondary" style="font-family: 'Montserrat'; color: black;">
                                        @sinhvien.Email_2
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h5 class="mb-0" style="font-family: 'Montserrat'; color: black; font-weight: 600;">SĐT:</h5>
                                    </div>
                                    <div class="col-sm-9 text-secondary" style="font-family: 'Montserrat'; color: black;">
                                        @sinhvien.DTDD
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h5 class="mb-0" style="font-family: 'Montserrat'; color: black; font-weight: 600;">SĐT Cha:</h5>
                                    </div>
                                    <div class="col-sm-9 text-secondary" style="font-family: 'Montserrat'; color: black;">
                                        @sinhvien.DTCha
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h5 class="mb-0" style="font-family: 'Montserrat'; color: black; font-weight: 600;">SĐT Mẹ:</h5>
                                    </div>
                                    <div class="col-sm-9 text-secondary" style="font-family: 'Montserrat'; color: black;">
                                        @sinhvien.DTMe
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h5 class="mb-0" style="font-family: 'Montserrat'; color: black; font-weight: 600;">Địa chỉ:</h5>
                                    </div>
                                    <div class="col-sm-9 text-secondary" style="font-family: 'Montserrat'; color: black;">
                                        @sinhvien.DiaChi
                                    </div>
                                </div>
                                <hr>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <!-- Modal -->
            <div class="modal fade" id="ThemSV" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
                <div class="modal-dialog modal-xl" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel" style="font-family: Roboto;">Thêm sinh viên vào lớp</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            @using (Html.BeginForm("ThemSinhVienVaoLop", "ChuNhiemLop", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                <input type="number" name="idLop" id="idLop" value="@Model.First().ID_Lop" hidden />
                                <input type="text" name="SinhVien" id="SinhVien" />
                                <div class="modal-footer">
                                    <input type="button" class="btn btn-secondary" data-dismiss="modal" value="Đóng" />
                                    <input type="submit" class="btn btn-primary" value="Thêm" />
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <!-- Xem điểm-->
            <div class="modal fade" id="XemDiemSo" tabindex="-1" role="dialog" aria-labelledby="modelTitleId" aria-hidden="true">
