            </div>
            <!-- xác nhận xóa -->
            <div class="modal fade" id="xacNhanXoa" tabindex="-1" role="dialog" aria-labelledby="modelTitleId" aria-hidden="true">
                @{ var sv = Session["sinhvien2"] as Cap24Team3.Models.SinhVien; }
                @if (sv != null)
                {
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <div class="col-1"></div>
                                <div class="col-10 text-center">
                                    <h4 class="modal-title" style="font-family: Roboto; color: black;">Xác nhận xóa sinh viên:</h4>
                                </div>

                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
