@model Cap24Team3.Models.DotChinhSuaThongTin

@{
    ViewBag.Title = "TaoDotChinhSua";
    Layout = "~/Views/Shared/Student_layout.cshtml";
}
<section class="pager-section">
    <div class="container">
        <div class="pager-content text-center">
            <h2 style="font-family: 'Montserrat';font-weight: 600; font-size: 80px;">Tạo Đợt Chỉnh Sửa</h2>
            <ul>
                <li><a href="#" title="">Home</a></li>
                <li><span>Đợt Chỉnh Sửa Thông Tin Sinh Viên</span></li>
            </ul>
        </div><!--pager-content end-->
        <h3 class="page-titlee">E-Profile</h3>
    </div>
</section><!--pager-section end-->
<hr>
<div class="page-content">
    <div class="content">
        <!-- Start Content-->
        <div class="container">
            <div class="col-8">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <form action="@Url.Action("TaoDotChinhSua")" method="post">
                        <p style="font-family: 'Montserrat'; color: black; font-size: 25px; font-weight: bold;">Ngày bắt đầu</p>
                        <br />
                        <input class="form-control" name="NgayBatDau" id="NgayBatDau" type="datetime-local" />
                        <br />
                        <p style="font-family: 'Montserrat'; color: black; font-size: 25px; font-weight: bold;">Ngày kết thúc</p>
                        <br />
                        <input class="form-control" name="NgayKetThuc" id="NgayKetThuc" type="datetime-local" />
                        <br />
                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-6">
                                    @foreach (var lop in ViewData["LopQuanLy"] as List<Cap24Team3.Models.LopQuanLy>)
                                    {
                                        <div class="form-check">
                                            <label class="form-check-label" style="font-family: 'Montserrat'; color: black;">
                                                <input type="checkbox" class="form-check-input" name="id" id="" value="@lop.ID" checked>
                                                Lớp @lop.TenLop
                                            </label>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                        <input type="submit" style="font-family: 'Montserrat';" value="Tạo mới" class="btn btn-default" />
                    </form>
                    <br />
                    <p style="font-family: 'Montserrat'; color: black;">
                        @Html.ActionLink("Quay lại", "DanhSachDotChinhSua")
                    </p>
                }
            </div>
        </div>
    </div>
</div>

