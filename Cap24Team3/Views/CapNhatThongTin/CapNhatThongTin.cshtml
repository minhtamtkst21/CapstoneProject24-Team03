@model Cap24Team3.Models.SinhVien
@{
    ViewBag.Title = "CapNhatThongTin";
    Layout = "~/Views/Shared/Student_layout.cshtml";
}

<h2>CapNhatThongTin @Model.Ho @Model.Ten</h2>
<form action="@Url.Action("CapNhatThongTin")" method="post">
    <p>Mail: </p>
    <input type="email" name="mail" value="@Model.Email_2" />
    <p>Sđt: </p>
    <input type="tel" name="sdt" pattern="[0-9]{}" value="@Model.DTDD" required/>
    <p>sđt cha: </p>
    <input type="tel" name="dtcha" pattern="[0-9]{}" value="@Model.DTCha"/>
    <p>sđt mẹ: </p>
    <input type="tel" name="dtme" pattern="[0-9]{}" value="@Model.DTMe">
    <p>Địa chỉ: </p>
    <input type="text" name="diachi" value="@Model.DiaChi"/>
    <input type="submit" value="Cập nhật" />
</form>

