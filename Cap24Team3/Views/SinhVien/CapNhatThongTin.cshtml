@model Cap24Team3.Models.SinhVien
@{
    ViewBag.Title = "CapNhatThongTin";
    Layout = "~/Views/Shared/Student_layout.cshtml";
    var cn = ViewData["CN"] as Cap24Team3.Models.DotChinhSuaThongTin;


}
<section class="pager-section">
    <div class="container">
        <div class="pager-content text-center">
            <h2 style="font-family: 'Montserrat';font-weight: 600; font-size: 80px;">Cập Nhật Thông Tin</h2>
            <ul>
            </ul>
        </div><!--pager-content end-->
        <h2 class="page-titlee">E-Profile</h2>
    </div>
</section><!--pager-section end-->
<hr>
<br />
@if (cn.DotChinhSua != null)
{
    <style>
        .div-centerr {
            margin: auto;
            width: 60%;
            padding: 10px;
        }
    </style>
    <div class="alert alert-warning col-6 div-centerr" align="center">
        <i class="fa fa-exclamation-triangle"></i> @Html.Raw(TempData["Alert"].ToString())
    </div>
}
else
{
    <h3 class="text-center" style="font-family: 'Montserrat'; color:black; font-size:60px">@cn.DotChinhSua</h3>
    <div class="page-content">
        <div class="content">
            <div class="container">
                <div class="col-12">
                    <br />
                    <form action="@Url.Action("CapNhatThongTin")" method="post">
                        <input name="capnhat" type="number" value="@cn.ID" hidden />
                        <p style="font-family: 'Montserrat'; color: black; font-size: 25px; font-weight: bold;">Email 2</p>
                        <br>
                        <input type="email" class="form-control" name="mail" value="@Model.Email_2" placeholder="Nhập mail" />
                        <br>
                        <p style="font-family: 'Montserrat'; color: black; font-size: 25px; font-weight: bold;">SĐT</p>
                        <br>
                        <input type="tel" class="form-control" name="sdt" value="@Model.DTDD" placeholder="Nhập sđt" pattern="[0-9]{}" required />
                        <br>
                        <p style="font-family: 'Montserrat'; color: black; font-size: 25px; font-weight: bold;">SĐT cha</p>
                        <br>
                        <input type="tel" class="form-control" name="dtcha" value="@Model.DTCha" placeholder="Nhập sđt cha" pattern="[0-9]{}" />
                        <br>
                        <p style="font-family: 'Montserrat'; color: black; font-size: 25px; font-weight: bold;">SĐT mẹ</p>
                        <br>
                        <input type="tel" class="form-control" name="dtme" value="@Model.DTMe" placeholder="Nhập sđt mẹ" pattern="[0-9]{}" />
                        <br>
                        <p style="font-family: 'Montserrat'; color: black; font-size: 25px; font-weight: bold;">Địa chỉ</p>
                        <br>
                        <input type="text" class="form-control" name="diachi" value="@Model.DiaChi" placeholder="Nhập địa chỉ" />
                        <br>
                        <button type="submit" class="btn btn-danger" style="font-family: 'Montserrat'; font-size: 20px;">
                            <i class="fa fa-refresh"></i> Cập Nhật
                        </button>
                    </form>
                </div> <!-- end col -->
            </div>
        </div> <!-- content -->
    </div>
    <hr>
}


