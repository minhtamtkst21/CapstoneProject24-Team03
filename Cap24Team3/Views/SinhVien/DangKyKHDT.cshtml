                                                                {
                                                                    if (rangbuoc.LoaiRangBuoc == "Song hành" && rangbuoc.HocPhanDaoTao1.ID == item.ID)
                                                                    {
                                                                        if (rangbuoc.HocPhanDaoTao.MaHocPhan != null)
                                                                        {
                                                                            <p title="@rangbuoc.HocPhanDaoTao.TenHocPhan">
                                                                                @rangbuoc.HocPhanDaoTao.MaHocPhan
