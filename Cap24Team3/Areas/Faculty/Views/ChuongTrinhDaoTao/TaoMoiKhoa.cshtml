@model Cap24Team3.Models.KhoaDaoTao

@{
    ViewBag.Title = "CreateKhoa";
    Layout = "~/Views/Shared/Faculty_Layout.cshtml";
}
<html>
<head>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Trirong">
    <style>
        body {
            font-family: "Trirong", serif;
        }
    </style>
</head>
<body>
    <h2 class="page-title" style="font-family:Roboto" >Thêm mới Khóa học</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.Label("Khóa", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Khoa, new { htmlAttributes = new { @class = "form-control", @required = true } })
                    @Html.ValidationMessageFor(model => model.Khoa, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Tạo mới" class="btn btn-secondary btn-rounded" />
                    <a href="@Url.Action("ListKhoaDT")" class="btn btn-secondary btn-rounded">Trở Về</a>
                </div>
            </div>
        </div>
    }
</body>
</html>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
