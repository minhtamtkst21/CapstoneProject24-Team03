@model Cap24Team3.Models.NganhDaoTao

@{
    ViewBag.Title = "CreateNganh";
    Layout = "~/Views/Shared/Faculty_Layout.cshtml";
}
<html>
<head>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Trirong">
    <style>
        body {
            font-family: "Trirong", serif;
        }
    </style>
</head>
<body>
    <h1 class="page-title" style="font-family:Roboto">Thêm Ngành Học</h1>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <hr />

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.Label("Mã ngành", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MaNganh, new { htmlAttributes = new { @class = "form-control", @required = true } })
                    @Html.ValidationMessageFor(model => model.MaNganh, "", new { @class = "text-danger" })
                </div>
            </div>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.Label("Tên ngành", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Nganh, new { htmlAttributes = new { @class = "form-control", @required = true } })
                    @Html.ValidationMessageFor(model => model.Nganh, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Tạo mới" class="btn btn-secondary btn-rounded" />
                    <input type="submit" value="Trở về" class="btn btn-secondary btn-rounded" formaction=@Url.Action("ListNganhDT", "ChuongTrinhDaoTao") />
                </div>
            </div>
        </div>

    }
</body>
</html>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
