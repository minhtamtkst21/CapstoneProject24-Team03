        font-family: Arial, Helvetica, sans-serif;
        width: 10rem;
        height: 10rem;
        border-radius: 50%;
        background: #ffc107;
        font-size: 3.5rem;
        color: #fff;
        text-align: center;
        line-height: 10rem;
        margin: 2rem 0;
    }

    .div-centerr {
        margin: auto;
        width: 60%;
        padding: 10px;
    }
</style>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive text-nowrap">
                    <table class="table table-striped mb-0 dt-responsive dataTable" id="table">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>MSSV</th>
                                <th>Họ</th>
                                <th>Tên</th>
                                <th>Ngày sinh</th>
                                <th>Giới tính</th>
                                <th>Tình trạng</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var s in Model)
                            {
                                STT++;
                            <tr>
                                <td>@STT</td>
                                <td>@s.MSSV</td>
                                <td>@s.Ho</td>
                                <td>@s.Ten</td>
                                <td>@s.NgaySinh</td>
                                <td>@s.GioiTinh</td>
                                <td>@s.TinhTrang.TenTinhTrang</td>
                                <td>
                                    <a href="@Url.Action("XemChiTiet", new { id = s.ID })">Xem chi tiết</a> |
                                    <a href="@Url.Action("XemDiemSinhVien", new { id = s.ID })">Xem điểm</a> |
                                    <a href="@Url.Action("XemKHHTSinhVien", "DanhSachSinhVien", new { id = s.ID })">KHHT</a>
                                </td>
                            </tr>
                            }

                        </tbody>
                    </table>
