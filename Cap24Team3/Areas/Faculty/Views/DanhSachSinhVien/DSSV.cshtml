@{
    int STT = 0;
}
<style>
    #profileImage {
        font-family: Arial, Helvetica, sans-serif;
        width: 10rem;
        height: 10rem;
        border-radius: 50%;
        background: #ffc107;
        font-size: 3.5rem;
        color: #fff;
        text-align: center;
        line-height: 10rem;
        margin: 2rem 0;
    }

    .div-centerr {
        margin: auto;
        width: 60%;
        padding: 10px;
    }
</style>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive text-nowrap">
                    <table class="table table-striped mb-0 dt-responsive dataTable" id="tbSv">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>MSSV</th>
                                <th>Họ</th>
                                <th>Tên</th>
                                <th>Ngày sinh</th>
                                <th>Giới tính</th>
                                <th>Tình trạng</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var s in Model)
                            {
                                STT++;
                                <tr>
                                    <td>@STT</td>
                                    <td>@s.MSSV</td>
                                    <td>@s.Ho</td>
                                    <td>@s.Ten</td>
                                    <td>@s.NgaySinh</td>
                                    <td>@s.GioiTinh</td>
                                    <td>@s.TinhTrang.TenTinhTrang</td>
                                    <td>
                                        <a href="@Url.Action("XemChiTiet", new { id = s.ID })">Xem chi tiết</a> |
                                        <a href="@Url.Action("XemDiemSinhVien", new { id = s.ID })">Xem điểm</a> |
                                        <a href="@Url.Action("XemKHHTSinhVien", "DanhSachSinhVien", new { id = s.ID })">KHHT</a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div> <!-- end .table-responsive-->
            </div> <!-- end card-body -->
        </div> <!-- end card -->
    </div> <!-- end col -->
</div> <!-- end row -->
<div class="modal fade" id="XemChiTiet" tabindex="-1" role="dialog" aria-labelledby="modelTitleId" aria-hidden="true">
    @{ var sinhvien = Session["sinhvien"] as Cap24Team3.Models.SinhVien; }
    @if (sinhvien != null)
    {
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <div class="col-1"></div>
                    <div class="col-10 text-center">
                        <h4 class="modal-title" style="font-family: Roboto;"> Thông tin sinh viên</h4>
                    </div>

                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="card-body">
                    <div class="d-flex flex-column align-items-center text-center">
                        <div id="profileImage"></div>
                        <span id="firstName" hidden>@sinhvien.Ten</span>
                        <div class="mt-3">
                            <h4 style="font-family: 'Montserrat'; color: black; font-weight: 600;">@sinhvien.Ho @sinhvien.Ten</h4>
                        </div>
                    </div>
                </div>
                <div class="card-body text-wrap">
                    <div class="row">
                        <div class="col-sm-3">
                            <h5 class="mb-0" style="font-family: 'Montserrat'; color: black; font-weight: 600;">Mã số sinh viên:</h5>
                        </div>
                        <div class="col-sm-9 text-secondary" style="font-family: 'Montserrat'; color: black;">
                            @sinhvien.MSSV
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h5 class="mb-0" style="font-family: 'Montserrat'; color: black; font-weight: 600;">Ngày sinh:</h5>
                        </div>
                        <div class="col-sm-9 text-secondary" style="font-family: 'Montserrat'; color: black;">
                            @sinhvien.NgaySinh
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h5 class="mb-0" style="font-family: 'Montserrat'; color: black; font-weight: 600;">Giới tính:</h5>
                        </div>
                        <div class="col-sm-9 text-secondary" style="font-family: 'Montserrat'; color: black;">
                            @sinhvien.GioiTinh
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h5 class="mb-0" style="font-family: 'Montserrat'; color: black; font-weight: 600;">Tình trạng:</h5>
                        </div>
                        <div class="col-sm-9 text-secondary" style="font-family: 'Montserrat'; color: black;">
                            @Session["tinhtrang"]
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h5 class="mb-0" style="font-family: 'Montserrat'; color: black; font-weight: 600;">Email 1:</h5>
                        </div>
                        <div class="col-sm-9 text-secondary" style="font-family: 'Montserrat'; color: black;">
                            @sinhvien.Email_1
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h5 class="mb-0" style="font-family: 'Montserrat'; color: black; font-weight: 600;">Email 2:</h5>
                        </div>
                        <div class="col-sm-9 text-secondary" style="font-family: 'Montserrat'; color: black;">
                            @sinhvien.Email_2
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h5 class="mb-0" style="font-family: 'Montserrat'; color: black; font-weight: 600;">SĐT:</h5>
                        </div>
                        <div class="col-sm-9 text-secondary" style="font-family: 'Montserrat'; color: black;">
                            @sinhvien.DTDD
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h5 class="mb-0" style="font-family: 'Montserrat'; color: black; font-weight: 600;">SĐT Cha:</h5>
                        </div>
                        <div class="col-sm-9 text-secondary" style="font-family: 'Montserrat'; color: black;">
                            @sinhvien.DTCha
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h5 class="mb-0" style="font-family: 'Montserrat'; color: black; font-weight: 600;">SĐT Mẹ:</h5>
                        </div>
                        <div class="col-sm-9 text-secondary" style="font-family: 'Montserrat'; color: black;">
                            @sinhvien.DTMe
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h5 class="mb-0" style="font-family: 'Montserrat'; color: black; font-weight: 600;">Địa chỉ:</h5>
                        </div>
                        <div class="col-sm-9 text-secondary" style="font-family: 'Montserrat'; color: black;">
                            @sinhvien.DiaChi
                        </div>
                    </div>
                    <hr>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    }
</div>
<div class="modal fade" id="XemDiemSo" tabindex="-1" role="dialog" aria-labelledby="modelTitleId" aria-hidden="true">
    @{ var Sinhvien = Session["sinhvien1"] as Cap24Team3.Models.SinhVien; }
    @if (Sinhvien != null)
    {
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <div class="col-1"></div>
                    <div class="col-10 text-center">
                        <h4 class="modal-title" style="font-family: Roboto;"> Thông tin sinh viên</h4>
                    </div>

                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="card-body">
                    <div class="d-flex flex-column align-items-center text-center">
                        <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                        <div class="mt-3">
                            <h4 style="font-family: 'Montserrat'; color: black; font-weight: 600;">@Sinhvien.Ho @Sinhvien.Ten</h4>
                        </div>
                    </div>
                </div>
                <div class="card-body text-wrap">
                    <div class="row">
                        <table>
                            <tr>
                                <th>Mã học phần</th>
                                <th>Tên học phần</th>
                                <th>Số tín chỉ</th>
                                <th>Học kỳ</th>
                                <th>Điểm thang 10</th>
                                <th>Điểm thang 4</th>
                                <th>Đánh giá</th>
                                <th>Qua môn</th>
                            </tr>
                            @foreach (var item in Session["diemso"] as List<Cap24Team3.Models.DiemHocPhan>)
                            {
                                <tr>
                                    <td>@item.HocPhan</td>
                                    <td>@item.TenHocPhan</td>
                                    <td>@item.SoTinChi</td>
                                    <td>@item.HocKyKeHoach</td>
                                    <td>@item.Diem10</td>
                                    <td>@item.Diem4</td>
                                    <td>@item.DiemChu</td>
                                    @if (item.QuaMon == true)
                                    {
                                        <td><i class="fa fa-check" style="color: green;"></i></td>
                                    }
                                    else
                                    {
                                        <td><i class="fa fa-times" style="color: red; font-size: 23px;"></i></td>
                                    }
                                </tr>
                            }
                        </table>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    }
</div>
